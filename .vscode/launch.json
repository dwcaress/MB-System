    // There can be multiple configurations defined. 
    // Initially, the mbgrd2gltf tool is set up for debugging:
    // - Test .grd files at https://github.com/dwcaress/MB-System/issues/1521#issuecomment-3537691382
    // - Use wget to copy test .grd files into build directory, output will also be written there
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug mbgrd2gltf",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/mbgrd2gltf/mbgrd2gltf",
            "args": [
                // Simple test to show help message
                //"-H"
                // Initial example for Monterey Bay terrain used by STOQS
                //"-I", "${workspaceFolder}/build/Monterey25.grd", "-O", "${workspaceFolder}/build", "-E", "10.0", "-V"
                // Monterey Bay binary with Draco compression
                //"-I", "${workspaceFolder}/build/Monterey25.grd", "-O", "${workspaceFolder}/build", "-E", "10.0", "-V", "-D", "-B"
                // Monterey Bay without verbose output
                //"-I", "${workspaceFolder}/build/Monterey25.grd", "-O", "${workspaceFolder}/build", "-E", "10.0", "-D", "-B"
                // Lake Erie example
                //"-I", "${workspaceFolder}/build/erie_lld.grd", "-O", "${workspaceFolder}/build", "-E", "10.0", "-D", "-B"
                // Lake Michigan example
                //"-I", "${workspaceFolder}/build/michigan_lld.grd", "-O", "${workspaceFolder}/build", "-E", "10.0", "-D", "-B"
                // Lake Michigan example
                //"-I", "${workspaceFolder}/build/michigan_lld.grd", "-O", "${workspaceFolder}/build", "-E", "10.0", "-D", "-B"
                // Globe example - fails to load due into gltf.report
                //"-I", "${workspaceFolder}/build/Globe_1m_bath.grd", "-O", "${workspaceFolder}/build", "-E", "10.0", "-D", "-B"
                // Terrain for BEDs during CCE 2015, no vertical exaggeration - fails to load into gltf.report
                //"-I", "${workspaceFolder}/build/MontereyCanyonBeds_1m+5m.grd", "-O", "${workspaceFolder}/build", "-E", "1.0", "-D", "-B"
                // San Pedro Basin example
                //"-I", "${workspaceFolder}/build/SanPedroBasin50.grd", "-O", "${workspaceFolder}/build", "-E", "10.0", "-D", "-B", "-V",
                // Test --geoorigin option with LASS multibeam data from Davidson Seamount - shows roundoff errors with ECEF coordinates
                "-I", "${workspaceFolder}/build/sample_data/OceanImaging2018/20180925d1/multibeam/ZTopo.grd", "-O", "${workspaceFolder}/build/sample_data/OceanImaging2018/20180925d1/multibeam", "-D", "-B", "-G", "-122,36,0", "-V"
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build mbgrd2gltf",
            "breakpointMode": "path",
            "initCommands": [
                // Break on C++ exceptions being thrown
                "breakpoint set -E C++",
                // Show full backtrace when stopped
                "settings set target.process.thread.step-avoid-regexp \"\""
            ]
        }
    ]
}

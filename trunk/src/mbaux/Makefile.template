# *** CHANGE THESE TO FIT YOUR LOCAL ENVIRONMENT ***
#
# Locations of GMT libraries, binaries, and include files:
GMTLIBDIR = /ocean/mgg/gmt2/sun4/lib
GMTINCDIR = /ocean/mgg/gmt2/src
NETCDFLIBDIR = /ocean/mgg/netcdf/sun4/lib
NETCDFINCDIR = /ocean/mgg/netcdf/include
# 
# Compilers 
CC = cc 
#
# Compile and load flags:
CFLAGS = -O2
ARCHIVE = ar rcv
#
# *** LEAVE EVERYTHING ELSE BELOW ALONE ***

LIBDIR = ../../lib
INCDIR = ../../include
MANDIR = ../../man/manl

### make all makes the mbaux library and associated include files
all:	$(LIBDIR)/libmbaux.a \
	$(LIBDIR)/libmbps.a \
	$(LIBDIR)/libmbxgr.a \
	$(INCDIR)/mb_contour.h

### make clean removes the object files
clean:
	rm -f *.o

### put together the libraries
$(LIBDIR)/libmbaux.a:	\
		mb_spline.o \
		mb_zgrid.o \
		mb_cheb.o \
		mb_delaun.o \
		mb_rt.o \
		mb_track.o \
		mb_truecont.o
	$(ARCHIVE) $(LIBDIR)/libmbaux.a \
		mb_spline.o \
		mb_zgrid.o \
		mb_cheb.o \
		mb_delaun.o \
		mb_rt.o \
		mb_track.o \
		mb_truecont.o
	ranlib $(LIBDIR)/libmbaux.a
$(LIBDIR)/libmbps.a:	\
		mb_pslibface.o
	$(ARCHIVE) $(LIBDIR)/libmbps.a \
		mb_pslibface.o
	ranlib $(LIBDIR)/libmbps.a
$(LIBDIR)/libmbxgr.a:	\
		xgraphics.o
	$(ARCHIVE) $(LIBDIR)/libmbxgr.a \
		xgraphics.o
	ranlib $(LIBDIR)/libmbxgr.a

### compile the source files
mb_spline.o:	mb_spline.c $(INCDIR)/mb_status.h $(INCDIR)/mb_define.h
	$(CC) -c $(CFLAGS) mb_spline.c
mb_zgrid.o:	mb_zgrid.c $(INCDIR)/mb_define.h
	$(CC) -c $(CFLAGS) mb_zgrid.c
mb_cheb.o:	mb_cheb.c $(INCDIR)/mb_status.h
	$(CC) -c $(CFLAGS) mb_cheb.c
mb_delaun.o:	mb_delaun.c $(INCDIR)/mb_status.h
	$(CC) -c $(CFLAGS) mb_delaun.c
mb_pslibface.o:	mb_pslibface.c  $(INCDIR)/mb_status.h  $(INCDIR)/mb_define.h
	$(CC) -c $(CFLAGS) -I$(GMTINCDIR) -I$(NETCDFINCDIR) mb_pslibface.c
mb_rt.o:	mb_rt.c $(INCDIR)/mb_status.h
	$(CC) -c $(CFLAGS) mb_rt.c
mb_track.o:	mb_track.c $(INCDIR)/mb_status.h $(INCDIR)/mb_contour.h
	$(CC) -c $(CFLAGS) mb_track.c
mb_truecont.o:	mb_truecont.c $(INCDIR)/mb_status.h
	$(CC) -c $(CFLAGS) mb_truecont.c
xgraphics.o:	xgraphics.c $(INCDIR)/mb_status.h
	$(CC) -c $(CFLAGS) xgraphics.c

### copy the include files to the include file directory
$(INCDIR)/mb_contour.h:	mb_contour.h
	cp mb_contour.h $(INCDIR)/mb_contour.h
	chmod 664 $(INCDIR)/mb_contour.h

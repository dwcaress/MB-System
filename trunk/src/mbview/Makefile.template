# *** CHANGE THESE TO FIT YOUR LOCAL ENVIRONMENT ***
#
# Locations of GMT libraries, binaries, and include files:
GMTLIBDIR = /sw/lib
GMTINCDIR = /sw/include
NETCDFINCDIR = /sw/include
#
# Locations of Motif include files and libraries:
MOTIFINCDIR = /sw/include
MOTIFLIBS = -L/sw/lib -L/usr/X11R6/lib -lXm -lXt -lX11
#
# Locations of OpenGL libraries:
OPENGLLIBS = -lGLw -lGLU -lGL
#
# Compilers 
# C compiler left as default
#
# Compile and load flags:
CFLAGS = -g -I/usr/include/X11R6 -DDARWIN -DGMT3_3
LFLAGS = -lm -L/usr/local/netcdf/lib -lnetcdf
ARCHIVE = ar rcv
#
# *** LEAVE EVERYTHING ELSE BELOW ALONE ***

### sets locations of vital objects
BINDIR = ../../bin
LIBDIR = ../../lib
INCDIR = ../../include

### make all makes the executable and man page
all: $(LIBDIR)/libmbview.a $(BINDIR)/mbgrdviz $(BINDIR)/mbeditviz

### make the library
$(LIBDIR)/libmbview.a:	MB3DView.o \
		mbview_callbacks.o\
		mbview_process.o \
		mbview_plot.o \
		mbview_primary.o \
		mbview_secondary.o \
		mbview_pick.o \
		mbview_site.o \
		mbview_route.o\
		mbview_nav.o
	$(ARCHIVE) $(LIBDIR)/libmbview.a \
		MB3DView.o \
		mbview_callbacks.o \
		mbview_process.o \
		mbview_plot.o \
		mbview_primary.o \
		mbview_secondary.o \
		mbview_pick.o \
		mbview_site.o \
		mbview_route.o\
		mbview_nav.o
	ranlib $(LIBDIR)/libmbview.a

### link the executables
$(BINDIR)/mbgrdviz: mbgrdviz_main.o \
		mbgrdviz_bxutils.o \
		mbgrdviz_callbacks.o \
		mbgrdviz_creation.o \
		$(LIBDIR)/libmbview.a \
		$(LIBDIR)/libmbio.a \
		$(LIBDIR)/libproj.a \
		$(LIBDIR)/libgsf.a \
		$(LIBDIR)/libsapi.a \
		$(LIBDIR)/libmr1pr.a  \
		$(LIBDIR)/libmbps.a \
		$(LIBDIR)/libmbxgr.a
	$(CC) $(CFLAGS) mbgrdviz_main.o \
		mbgrdviz_bxutils.o \
		mbgrdviz_callbacks.o \
		mbgrdviz_creation.o \
		$(LIBDIR)/libmbview.a \
		$(LIBDIR)/libmbio.a \
		$(LIBDIR)/libproj.a \
		$(LIBDIR)/libgsf.a \
		$(LIBDIR)/libsapi.a \
		$(LIBDIR)/libmr1pr.a  \
		$(LIBDIR)/libmbxgr.a \
		$(GMTLIBDIR)/libgmt.a \
		$(GMTLIBDIR)/libpsl.a \
		$(OPENGLLIBS) $(MOTIFLIBS) $(LFLAGS) -o $(BINDIR)/mbgrdviz
